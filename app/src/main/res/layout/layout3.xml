<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/topDecoration"
        android:layout_width="477dp"
        android:layout_height="193dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-119dp"
        android:layout_marginBottom="609dp"
        android:background="@drawable/top_rectangle_layout2" />

    <TextView
        android:id="@+id/registerView"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="554dp"
        android:background="@drawable/login_gradient"
        android:fontFamily="@font/font1"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="    REGISTER"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/button_decoration"
        android:layout_width="wrap_content"
        android:layout_height="402dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="134dp"
        android:background="@drawable/buttondecoration_rectangle" />

    <EditText
        android:id="@+id/editTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/button_decoration"
        android:layout_alignEnd="@+id/button_decoration"
        android:layout_alignBottom="@+id/button_decoration"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="342dp"
        android:background="@drawable/edit_text_outline"
        android:ems="10"
        android:fontFamily="@font/font4"
        android:hint="             E-mail"
        android:inputType="textPersonName|number"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_Password2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/button_decoration"
        android:layout_alignEnd="@+id/button_decoration"
        android:layout_alignBottom="@+id/button_decoration"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="286dp"
        android:background="@drawable/edit_text_outline"
        android:ems="10"
        android:fontFamily="@font/font4"
        android:inputType="textPersonName|number"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:hint="         Password"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <Button
        android:id="@+id/button7"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_decoration"
        android:layout_alignEnd="@+id/button_decoration"
        android:layout_alignBottom="@+id/button_decoration"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="229dp"
        android:fontFamily="@font/font1"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="@string/google_signup"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="@color/color1"
        app:cornerRadius="8dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="282dp"
        android:layout_height="180dp"
        android:layout_alignStart="@+id/button_decoration"
        android:layout_alignTop="@+id/button_decoration"
        android:layout_alignEnd="@+id/button_decoration"
        android:layout_marginStart="20dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/img" />

    <Button
        android:id="@+id/button3"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_decoration"
        android:layout_alignEnd="@+id/button_decoration"
        android:layout_alignBottom="@+id/button_decoration"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="17dp"
        android:fontFamily="@font/font1"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="@string/submit"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="@color/color1"
        app:cornerRadius="8dp" />

    <ImageView
        android:id="@+id/bottomDecoration"
        android:layout_width="454dp"
        android:layout_height="201dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-92dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-80dp"
        android:background="@drawable/bottom_rectangle_layout2" />

</RelativeLayout>