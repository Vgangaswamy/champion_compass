<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/topDecoration"
        android:layout_width="477dp"
        android:layout_height="193dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-118dp"
        android:layout_marginBottom="629dp"
        android:background="@drawable/top_rectangle_layout2" />

    <ImageView
        android:id="@+id/bottomDecoration"
        android:layout_width="454dp"
        android:layout_height="201dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-92dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-90dp"
        android:background="@drawable/bottom_rectangle_layout2" />


    <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="441dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="154dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="136dp"
            android:background="@drawable/buttondecoration_rectangle"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="460dp"
            android:background="@drawable/explanation_2"
            android:id="@+id/imageView16"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="125dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="146dp"
            android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/imageView7"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="@string/intro_objectives"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/color1" />

    <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="154dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="163dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="414dp"
            android:background="@drawable/welcome_rectangle"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="2"
        android:shadowRadius="1.5"
        android:text="@string/welcome_message"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="266dp"
        android:layout_height="68dp"
        android:layout_alignStart="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="@string/message"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="213dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="101dp"
            android:layout_marginEnd="99dp"
            android:layout_marginBottom="204dp"
            app:srcCompat="@drawable/poro2"/>

</RelativeLayout>
