<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/topDecoration"
        android:layout_width="477dp"
        android:layout_height="193dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-119dp"
        android:layout_marginBottom="609dp"
        android:background="@drawable/top_rectangle_layout2" />

    <TextView
        android:id="@+id/loginView"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="554dp"
        android:background="@drawable/login_gradient"
        android:fontFamily="@font/font1"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="     LOG IN"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/button_decoration"
        android:layout_width="299dp"
        android:layout_height="255dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="283dp"
        android:background="@drawable/buttondecoration_rectangle" />

    <EditText
        android:id="@+id/editTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/button_decoration"
        android:layout_alignEnd="@+id/button_decoration"
        android:layout_alignBottom="@+id/button_decoration"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="181dp"
        android:background="@drawable/edit_text_outline"
        android:ems="10"
        android:fontFamily="@font/font4"
        android:inputType="textPersonName|number"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:hint="             E-mail"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignStart="@+id/button_decoration"
        android:layout_alignEnd="@+id/button_decoration"
        android:layout_alignBottom="@+id/button_decoration"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="102dp"
        android:background="@drawable/edit_text_outline"
        android:ems="10"
        android:fontFamily="@font/font4"
        android:inputType="textPersonName|number"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:hint="         Password"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_decoration"
        android:layout_alignEnd="@+id/button_decoration"
        android:layout_alignBottom="@+id/button_decoration"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/font1"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="@string/submit"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="@color/color1"
        app:cornerRadius="8dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="321dp"
        android:layout_height="206dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-399dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="86dp"
        app:srcCompat="@drawable/challenger1" />

    <ImageView
        android:id="@+id/bottomDecoration"
        android:layout_width="454dp"
        android:layout_height="201dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-92dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-80dp"
        android:background="@drawable/bottom_rectangle_layout2" />

</RelativeLayout>
