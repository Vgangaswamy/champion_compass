<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/topDecoration"
        android:layout_width="477dp"
        android:layout_height="193dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-118dp"
        android:layout_marginBottom="609dp"
        android:background="@drawable/top_rectangle_layout2" />


    <ImageView
        android:id="@+id/button_decoration"
        android:layout_width="299dp"
        android:layout_height="195dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/buttondecoration_rectangle" />

    <Button
        android:id="@+id/button1"
        android:layout_width="247dp"
        android:layout_height="63dp"
        android:layout_alignStart="@+id/button_decoration"
        android:layout_alignEnd="@+id/button_decoration"
        android:layout_alignBottom="@+id/button_decoration"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="112dp"
        android:fontFamily="@font/font1"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="Register?"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="@color/color1"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="247dp"
        android:layout_height="63dp"
        android:layout_alignStart="@+id/button_decoration"
        android:layout_alignTop="@+id/button_decoration"
        android:layout_alignEnd="@+id/button_decoration"
        android:layout_marginStart="25dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/font1"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="Already signed in?"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="@color/color1" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="287dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-87dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="117dp"
        app:srcCompat="@drawable/lux" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="103dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="187dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="313dp"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Are you ready player?"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/bottomDecoration"
        android:layout_width="454dp"
        android:layout_height="201dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-92dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-80dp"
        android:background="@drawable/bottom_rectangle_layout2" />



</RelativeLayout>
